<div class="container-fluid" style="background-color:rgba(255,0,0,0.5);height:60px;">
  <button class="form-control" type="button">Click to change order!</button>
</div>

<%= link_to '新增', new_list_path %>

<table class="table table-striped table-codensed">
  <ul>
    <% @lists.each do |list| %>
      <tr>
        <td>
          <%= check_box_tag :done, true , list.done, data: { url: is_done_list_path(list), method: :post, remote: true } %>
        </td>
        <td><%= list.due_date %></td>
        <td><%= list.name %></td>
        <td><%= link_to 'Show', list_path(list) %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list_path(list), method: :delete, data:{ confirm: "Are you sure?" } %></td>
        <td>
          <%= link_to(raw('<span class="glyphicon glyphicon-eye-open"></span>'), list_path(list))%>
        </td>
        <td>
          <%= link_to(raw('<span class="glyphicon glyphicon-edit"></span>'), edit_list_path(list))%>
        </td>
        <td>
          <% if list.due_date >= Date.today %>
            <%= link_to(raw('<span class="glyphicon glyphicon-trash"></span>'), list_path(list), method: :delete, data:{ confirm: "Are you sure?" })%>
          <% else %>
            <i class="glyphicon glyphicon-trash" style="color:gray" ></i>
          <% end %>
        </td>
        <td>

        </td>
      </tr>
    <% end %>
  </ul>
</table>
